{
  "name": "pazaak-web",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:server": "bun --cwd apps/server dev",
    "dev:web": "bun --cwd apps/web dev",
    "dev": "bun --filter web --filter server dev",
    "test:server": "bun run --cwd apps/server test",
    "test:web": "bun run --cwd apps/web test",
    "build": "bun run --filter web --filter server build",
    "format": "bun run --filter web --filter server format",
    "lint": "bun run --filter web --filter server lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
